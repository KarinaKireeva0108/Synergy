def min_boats(m, n, weights):
    # Сортируем массив весов
    weights.sort()
    left = 0  # Указатель на самого легкого рыбака
    right = n - 1  # Указатель на самого тяжелого рыбака
    boats = 0  # Счетчик лодок
    while left <= right:
        # Если самый легкий и самый тяжелый рыбак могут поместиться в одной лодке
        if weights[left] + weights[right] <= m:
            left += 1  # Перемещаем указатель на легкого рыбака
        right -= 1  # Перемещаем указатель на тяжелого рыбака
        boats += 1  # Увеличиваем счетчик лодок
    return boats
# Считываем максимальную массу, которую может выдержать одна лодка
m = int(input())
# Считываем количество рыбаков
n = int(input())
# Считываем веса рыбаков
weights = [int(input()) for _ in range(n)]
# Вычисляем минимальное количество лодок
result = min_boats(m, n, weights)
# Выводим результат
print(result)
